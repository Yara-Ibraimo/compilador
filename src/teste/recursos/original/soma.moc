// Ficheiro sem erros sobre a gramatica MOCC.g4
// Soma dos primeiros N inteiros

int soma(int n) {
    int i, total = 0;
    for (i = 1; i <= n; i = i + 1) {
        total = total + i;
    }
    return total;
}

void main(void) {
    int num;
    writes("Introduza um número inteiro: ");
    num = read();
    write(soma(num));
}
